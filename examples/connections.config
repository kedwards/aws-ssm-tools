# AWS SSM Connections Configuration
# Format: INI-style config file with connection sections
# Each section defines a port forwarding configuration
#
# The 'profile' field is optional. If omitted, the current AWS_PROFILE
# will be used, or you'll be prompted to select one if not authenticated.

[Engine]
region = us-west-2
name = CheckoutEngine
host = rch-cf-rds-engine-read.rch
port = 5432
local_port = 5432

[ReportBrowser-io]
profile = io
region = us-west-2
name = Report
host = localhost
port = 4444
local_port = 4444
url = http://localhost:4444

[ReportBrowser-how]
profile = how
region = us-west-2
name = Report
host = localhost
port = 4444
local_port = 4444
url = http://localhost:4444

[AlertManager]
profile = ps
region = us-west-2
name = Monitoring
host = localhost
port = 8428
local_port = 8428

[Vicoria Metrics]
profile = ps
region = us-west-2
name = Monitoring
host = localhost
port = 9093
local_port = 9093

# Multi-port forwarding example
# Opens both AlertManager (9093) and Victoria Metrics (8428) with one command
[Monitoring-All]
profile = ps
region = us-west-2
name = Monitoring
host = localhost
ports = 8428,9093
local_ports = 8428,9093

# Example without profile - uses current AWS_PROFILE
[LocalDB]
region = us-west-2
name = Database
host = localhost
port = 5432
local_port = 5432
